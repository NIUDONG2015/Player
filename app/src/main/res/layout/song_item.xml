<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/song_item_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:background="@drawable/click_trans_mask"
        android:orientation="horizontal">
        
        <ImageView
            android:layout_width="13dp"
            android:layout_height="16dp"
            android:layout_marginLeft="8dp"
            android:duplicateParentState="true"
            android:src="@drawable/music_icon_seletor"/>

        <TextView
            android:id="@+id/song_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="12dp"
            android:duplicateParentState="true"
            android:textSize="14dp"
            android:textColor="@color/song_name_seletor"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="这是很的歌曲这是很长的歌曲这是很长的歌曲"/>
        
        <ImageView
            android:layout_width="12dp"
            android:layout_height="13dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="18dp"
            android:duplicateParentState="true"
            android:src="@drawable/play_small_icon_seletor"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="33dp"
        android:background="#454545"/>

</LinearLayout>
